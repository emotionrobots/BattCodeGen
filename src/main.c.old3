        // F(y) with y=[xk, zk]
        eval_rhs_alg(xk, zk, tnext, I, Tamb, fx, gx);
        for (int i=0;i<nx;++i) F[i]     = xk[i] - x[i] - dt*fx[i];
        for (int j=0;j<nz;++j) F[nx+j]  = gx[j];
    
