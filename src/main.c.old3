    if (ok) { memcpy(x, xk, nx*sizeof(CASADI_REAL)); memcpy(z, zk, nz*sizeof(CASADI_REAL)); }
    printf("Step 25\n");
#endif
    if (F) free (F);
    printf("Step 26\n");
    if (J) free(J); 
    printf("Step 27\n");
    if (dY) free(dY); 
    printf("Step 28\n");
    if (xk) free(xk); 
    printf("Step 29\n");
    if (zk) free(zk); 
    printf("Step 30\n");
    if (fx) free(fx); 
    printf("Step 31\n");
    if (gx) free(gx); 
    printf("Step 32\n");
    if (fx2) free(fx2); 
    printf("Step 33\n");
